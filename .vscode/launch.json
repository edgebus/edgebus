{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Service",
			"type": "node",
			"request": "launch",
			"preLaunchTask": "build",
			"runtimeArgs": [
				"--nolazy",
				"--require",
				"source-map-support/register",
				"--expose-gc"
			],
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development",
				"LOG4JS_CONFIG": "${workspaceFolder}/log4js.json",
				"LOG_LEVEL": "trace"
			},
			"envFile": "${workspaceFolder}/.env",
			"args": [
				"--config-toml-file=${workspaceRoot}/edgebus-runtime.toml",
				"--config-toml-file=${workspaceRoot}/edgebus-setup.toml",
				"--config-env"
			],
			"program": "${workspaceRoot}/bin/edgebus-devel.js",
			"skipFiles": [
				"<node_internals>/**"
			],
		},
		{
			"name": "Database Migration",
			"type": "node",
			"request": "launch",
			"preLaunchTask": "build",
			"runtimeArgs": [
				"--nolazy",
				"--require",
				"source-map-support/register",
			],
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development",
				"LOG4JS_CONFIG": "${workspaceFolder}/log4js.json",
				"LOG_LEVEL": "trace"
			},
			"envFile": "${workspaceFolder}/.env",
			"args": [
				"--config-toml-file=${workspaceRoot}/edgebus-runtime.toml",
				"--config-toml-file=${workspaceRoot}/edgebus-setup.toml",
				"--config-env"
			],
			"program": "${workspaceRoot}/bin/edgebus-database-migrate.js",
			"skipFiles": [
				"<node_internals>/**"
			],
		},
		{
			"name": "Tests",
			"type": "node",
			"request": "launch",
			"preLaunchTask": "build",
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy",
				"--require",
				"source-map-support/register"
			],
			"stopOnEntry": false,
			"cwd": "${workspaceFolder}",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"args": [
				"--no-timeouts",
				"--colors",
				"--debug-brk",
				"--recursive",
				"test/**/*.test.js"
			],
			"env": {
				"NODE_ENV": "development"
			},
			"sourceMaps": true
		}
	]
}
