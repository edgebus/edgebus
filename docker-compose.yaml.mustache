version: "3.9"

networks:
  default:
    name: "edgebus-local-tier"

volumes:
  # Unused stub volume to prevent error "volumes must be a mapping" when all volumes disabled
  stub:
{{#PGADMIN_USEDATAVOLUME}}
  pgadmin-data:
{{/PGADMIN_USEDATAVOLUME}}
{{#POSTGRES_USEDATAVOLUME}}
  postgres-data:
{{/POSTGRES_USEDATAVOLUME}}
{{#REDIS_USEDATAVOLUME}}
